<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- INTERNET PERMISSION -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Nestify_10"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nestify10"
        tools:targetApi="31">
        <activity
            android:name=".confirm"
            android:exported="false" />
        <activity
            android:name=".detail_info"
            android:exported="false" /> <!-- ✅ Splash Screen (Entry point) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ✅ Sign Up Activity (After Splash) -->
        <activity
            android:name=".signup"
            android:exported="true"
            android:label="Sign Up" /> <!-- ✅ Main Activity (After Sign Up) -->
        <activity
            android:name=".activity_option"
            android:exported="true"
            android:label="Options" /> <!-- ✅ Property List Activities -->
        <activity
            android:name=".Property_list_1"
            android:exported="true"
            android:label="Property List 1" />
        <activity
            android:name=".Property_list_2"
            android:exported="true"
            android:label="Property List 2" />
        <activity
            android:name=".Property_list_3"
            android:exported="true"
            android:label="Property List 3" />
    </application>

</manifest>